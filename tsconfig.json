{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "rootDir": "scripts",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
